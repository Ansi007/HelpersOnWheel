@using HOW
@using HOW.Models
@model Seeker

@{
    ViewData["Title"] = "Seeker Sign Up";
}

<form method = "post" action = "/SignUp/SeekerSignUp"> 
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="FirstName">First Name</label>
            <input asp-for="FirstName" placeholder="First Name" type="text" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label for="LastName">Last Name</label>
            <input asp-for="LastName" placeholder="Last Name" type="text" class="form-control">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Age">Age</label>
            <input asp-for="Age" type="number">
        </div>
        <div class="form-group col-md-4">
            <label for="Gender">Gender</label>
            <select id="Gender" class="form-control">
                <option selected>Male</option>
                <option>Female</option>
                <option>Others</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Email">Email</label>
            <input type="email" asp-for="Email" placeholder="Email" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label for="Password">Password</label>
            <input type="Password" asp-for="Password" placeholder="Password" class="form-control">
        </div>
    </div>  
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="PhoneNumber">Phone Number</label>
            <input type="number" asp-for="PhoneNumber" placeholder="Phone Number" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" asp-for="Address" placeholder="House # XX, Street # XX" class="form-control">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="City">City</label>
            <input type="text" class="form-control" asp-for="City">
        </div>
        <div class="form-group col-md-2">
            <label for="Zip">Zip</label>
            <input type="text" class="form-control" asp-for="Zip">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
