@using HOW
@using HOW.Models
@model Seeker

@{
    ViewData["Title"] = "Seeker Sign Up";
}

<div style="margin: 30px 30px 0px 30px;">
<form method = "post" action = "/SignUp/SeekerSignUp"> 
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="FirstName">First Name</label>
            <input asp-for="FirstName" placeholder="First Name" type="text" class="form-control">
            <span asp-validation-for="FirstName"></span> 
        </div>
        <div class="form-group col-md-6 mb-3">
            <label for="LastName">Last Name</label>
            <input asp-for="LastName" placeholder="Last Name" type="text" class="form-control">
            <span asp-validation-for="LastName"></span> 
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="Age">Age</label>
            <input asp-for="Age" type="number">
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group col-md-4 mb-3">
            <label for="Gender">Gender</label>
            <select asp-for="Gender" class="form-control">
                <option selected>Male</option>
                <option>Female</option>
                <option>Others</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="Email">Email</label>
            <input type="email" asp-for="Email" placeholder="Email" class="form-control">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group col-md-6 mb-3">
            <label for="Password">Password</label>
            <input type="Password" asp-for="Password" placeholder="Password" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
    </div>  
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="PhoneNumber">Phone Number</label>
            <input type="number" asp-for="PhoneNumber" placeholder="Phone Number" class="form-control">
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
</div>