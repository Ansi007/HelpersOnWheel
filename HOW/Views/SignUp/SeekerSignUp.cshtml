@using HOW
@using HOW.Models
@model Seeker

@{
    ViewData["Title"] = "Seeker Sign Up";
}

@section SignUpCss {
<link href="~/CSS/signup.css" rel="Stylesheet" type="text/css" />
}

<script>

$(document).ready(function () {
    $("#validateEmail").click(function () {
        const email1 = $("#Email").val();
        $.get("/SignUp/EmailAvailableSeeker", {email: email1}, function(result) {
            if (result == "") {
                $("#emailSpan").html(email1 + " is AVAILABLE!");
            }
            else if(result == email1) {
                $("#emailSpan").html(email1 + " is TAKEN CHOOSE ANOTHER!");
            }
            else {
                $("#emailSpan").html(email1 + " is NOT AVAILABLE!");
            }
        });
    });
});

</script>

<div>
    <div class="registration-form">

        <form method="post" action="/SignUp/SeekerSignUp">
            <div class="form-icon">
                <span class="mt-3"><i class="fa fa-user" aria-hidden="true"></i></span>
            </div>
            <div class="text-center mb-4">
                <h1>Seeker Sign Up</h1>
            </div>
            <div class="form-group">
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="FirstName" placeholder="First Name" type="text" class="form-control item">
            </div>
            <div class="form-group">
                <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="LastName" placeholder="Last Name" type="text" class="form-control item">
            </div>
            <div class="form-group">
                <span asp-validation-for="Age" class="text-danger"></span>
                <input asp-for="Age" type="number" class="form-control item" placeholder = "Age">
            </div>
            <div class="form-group">
                <select asp-for="Gender" class="form-control item">
                    <option selected>Male</option>
                    <option>Female</option>
                    <option>Others</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Email" class="text-danger" id = "emailSpan"></span>
                <input type="email" asp-for="Email" placeholder="Email" class="form-control item">
                <a class="btn btn-block create-account" id = "validateEmail">Validate</a>
            </div>
            <div class="form-group">
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="Password" asp-for="Password" placeholder="Password" class="form-control item">
            </div>
            <div class="form-group">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <input type="number" asp-for="PhoneNumber" placeholder="Phone Number" class="form-control item">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-block create-account">Create Account</button>
            </div>
        </form>
    </div>
</div>