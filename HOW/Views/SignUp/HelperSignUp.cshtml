@using HOW
@using HOW.Models
@model Helper

@{
    ViewData["Title"] = "Helper Sign Up";
}

@section Home {
    <li class="nav-item active">
        <a class="nav-link" asp-controller = "Home" asp-action = "Index">Home</a>
    </li>
}

<div style="margin: 30px 30px 0px 30px;">
        <h1>Helper SignUp</h1>
<form method = "post" action = "/SignUp/HelperSignUp"> 
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="FirstName">First Name</label>
            <input asp-for="FirstName" placeholder="First Name" type="text" class="form-control" required>
            <span asp-validation-for="FirstName"></span> 
        </div>
        <div class="form-group col-md-6 mb-3">
            <label for="LastName">Last Name</label>
            <input asp-for="LastName" placeholder="Last Name" type="text" class="form-control" required>
            <span asp-validation-for="LastName"></span> 
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="Age">Age</label>
            <input asp-for="Age" type="number" required>
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group col-md-4 mb-3">
            <label for="Gender">Gender</label>
            <select asp-for="Gender" class="form-control">
                <option selected>Male</option>
                <option>Female</option>
                <option>Others</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="Profession">Profession</label>
            <input asp-for="Profession" placeholder="Profession/Occupation" type="text" class="form-control" required>
            <span asp-validation-for="Profession"></span> 
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="Email">Email</label>
            <input type="email" asp-for="Email" placeholder="Email" class="form-control" required>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group col-md-6 mb-3">
            <label for="Password">Password</label>
            <input type="Password" asp-for="Password" placeholder="Password" class="form-control" required>
            <span asp-validation-for="Password"></span>
        </div>
    </div>  
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="PhoneNumber">Phone Number</label>
            <input type="number" asp-for="PhoneNumber" placeholder="Phone Number" class="form-control" required>
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="Address">Address</label>
        <input type="text" asp-for="Address" placeholder="House # XX, Street # XX" class="form-control" required>
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 mb-3">
            <label for="City">City</label>
            <input type="text" class="form-control" asp-for="City" required>
            <span asp-validation-for="City"></span>
        </div>
        <div class="form-group col-md-2 mb-3">
            <label for="Zip">Zip</label>
            <input type="text" class="form-control" asp-for="Zip" required>
            <span asp-validation-for="Zip"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
</div>