@using HOW
@using HOW.Models
@model Helper

@{
    ViewData["Title"] = "Helper Sign Up";
}

@section SignUpCss {
    <link href="~/CSS/signup.css" rel="Stylesheet" type="text/css" />
}

<div>
<div class="registration-form">
    
    <form method="post" action="/SignUp/HelperSignUp">
        <div class="form-icon">
            <span><i class="icon icon-user"></i></span>
        </div>
        <div class="form-group">
            <input asp-for="FirstName" placeholder="First Name" type="text" class="form-control item">
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <input asp-for="LastName" placeholder="Last Name" type="text" class="form-control item">
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <input asp-for="Age" type="number" class="form-control item" placeholder="Age">
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <select asp-for="Gender" class="form-control item">
                <option selected>Male</option>
                <option>Female</option>
                <option>Others</option>
            </select>
        </div>
        <div class="form-group">
            <input asp-for="Profession" placeholder="Profession/Occupation" type="text" class="form-control item">
            <span asp-validation-for="Profession"></span>
        </div>
        <div class="form-group">
            <input type="email" asp-for="Email" placeholder="Email" class="form-control item">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <input type="Password" asp-for="Password" placeholder="Password" class="form-control item">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="number" asp-for="PhoneNumber" placeholder="Phone Number" class="form-control item">
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group">
            <input type="text" asp-for="Address" placeholder="House # XX, Street # XX" class="form-control item">
            <span asp-validation-for="Address"></span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control item" asp-for="City" placeholder="City">
            <span asp-validation-for="City"></span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control item" asp-for="Zip" placeholder="Zip">
            <span asp-validation-for="Zip"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block create-account">Create Account</button>
        </div>
    </form>
</div>
</div>  